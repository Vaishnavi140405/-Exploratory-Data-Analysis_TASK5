# -----------------------------------------------
# 1. Import Libraries
# -----------------------------------------------
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

sns.set(style="whitegrid")


# -----------------------------------------------
# 2. Load Dataset
# -----------------------------------------------
df = pd.read_csv("titanic.csv")
print("Dataset Loaded Successfully!")
df.head()


# -----------------------------------------------
# 3. Basic Exploration
# -----------------------------------------------
print("\n----- SHAPE -----")
print(df.shape)

print("\n----- INFO -----")
print(df.info())

print("\n----- SUMMARY STATISTICS -----")
print(df.describe())

print("\n----- MISSING VALUES -----")
print(df.isnull().sum())


# -----------------------------------------------
# 4. Univariate Analysis
# -----------------------------------------------

# Histogram of all numerical columns
df.hist(figsize=(12, 8))
plt.suptitle("Histogram of Numerical Columns", fontsize=16)
plt.show()

# Age Distribution
plt.figure(figsize=(7,5))
sns.histplot(df["Age"], kde=True, bins=30)
plt.title("Age Distribution with KDE")
plt.show()

# Fare Distribution
plt.figure(figsize=(7,5))
sns.histplot(df["Fare"], kde=True, bins=30)
plt.title("Fare Distribution")
plt.show()

# Survival Count
sns.countplot(x="Survived", data=df)
plt.title("Survival Count")
plt.show()

# Gender Count
sns.countplot(x="Sex", data=df)
plt.title("Gender Count")
plt.show()

# Pie Chart of Passenger Class
plt.figure(figsize=(6,6))
df["Pclass"].value_counts().plot.pie(autopct="%1.1f%%")
plt.title("Passenger Class Distribution")
plt.ylabel("")
plt.show()


# -----------------------------------------------
# 5. Bivariate Analysis
# -----------------------------------------------

# Survival by Gender
sns.countplot(x="Sex", hue="Survived", data=df)
plt.title("Survival by Gender")
plt.show()

# Survival by Passenger Class
sns.countplot(x="Pclass", hue="Survived", data=df)
plt.title("Survival by Passenger Class")
plt.show()

# Age vs Fare
plt.scatter(df["Age"], df["Fare"])
plt.title("Age vs Fare")
plt.xlabel("Age")
plt.ylabel("Fare")
plt.show()

# Age Distribution by Class
sns.boxplot(x="Pclass", y="Age", data=df)
plt.title("Age Distribution by Passenger Class")
plt.show()

# KDE Plot: Age by Survival
plt.figure(figsize=(10,5))
sns.kdeplot(data=df, x="Age", hue="Survived", fill=True)
plt.title("Age Distribution by Survival")
plt.show()

# Violin Plot: Survival vs Fare
sns.violinplot(x="Survived", y="Fare", data=df)
plt.title("Fare Variation by Survival")
plt.show()


# -----------------------------------------------
# 6. Multivariate Analysis
# -----------------------------------------------

# Correlation Heatmap
corr = df.corr(numeric_only=True)
plt.figure(figsize=(10, 6))
sns.heatmap(corr, annot=True, cmap="coolwarm")
plt.title("Correlation Heatmap")
plt.show()

# Pairplot
sns.pairplot(df[["Survived", "Age", "Fare", "Pclass", "SibSp", "Parch"]])
plt.suptitle("Pairplot of Key Variables", y=1.02)
plt.show()

# Joint Plot (Age vs Fare)
sns.jointplot(x="Age", y="Fare", data=df, kind="reg")
plt.suptitle("Joint Plot: Age vs Fare")
plt.show()

# FacetGrid: Age by Sex and Survival
g = sns.FacetGrid(df, col="Survived", row="Sex", height=3)
g.map(sns.histplot, "Age")
plt.suptitle("Age Distribution by Sex & Survival", y=1.03)
plt.show()

# Swarm plot - class vs fare
plt.figure(figsize=(10,6))
sns.swarmplot(x="Pclass", y="Fare", data=df)
plt.title("Fare Distribution across Passenger Class")
plt.show()


# -----------------------------------------------
# 7. Summary of Key Findings (Printed)
# -----------------------------------------------
print("\nüîç SUMMARY OF FINDINGS:")
print("""
1. Most passengers were male and in the age range of 20‚Äì40.
2. Females survived in much higher numbers than males.
3. 1st class passengers had the highest survival rate.
4. Higher fare was associated with higher survival chances.
5. Age, Fare and Pclass show clear patterns related to survival.
6. Missing values mainly in Age, Cabin, and Embarked.
7. Fare varies heavily by passenger class.
8. Younger passengers had lower survival, especially males.
""")
